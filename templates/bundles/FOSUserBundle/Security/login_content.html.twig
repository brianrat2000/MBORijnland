{% extends 'base.html.twig' %}

{% block title %}MKB Digiwerkplaats Registratie{% endblock %}

{% block stylesheets %}
  {{ encore_entry_link_tags('fosbundle') }}
{% endblock %}

{% block body %}

{% include 'components/header.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="masthead">
    <div class="container login-form-container">
        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="input-parent">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>
            <div class="input-parent">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
            </div>
            <div style="display: inline; padding: 20px 0;">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <input class="btn btn-warning" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
</div>

{% endblock %}