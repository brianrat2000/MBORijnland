<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Let's Explore Symfony 4{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
          crossorigin="anonymous">
    {% block stylesheets %}{% endblock %}
</head>

<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-danger">
        <div class="container">
            <a class="navbar-brand" href="{{ path('product_index') }}">Home</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('product_index') }}">Products</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('product_checkout') }}">
                            Checkout
                            <span class="badge badge-warning">
                                <i class="fas fa-shopping-cart"></i>
                                {% for item in app.session.get("Cart") %}
                                    {% if item["Amount"] is defined %}
                                        <span class="amount" style="display: none;">{{ item["Amount"] }}</span>
                                    {% endif %}
                                {% endfor %}
                            </span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="container mt-5 main">
    {% block body %}{% endblock %}
</main><!-- /.container -->

{% block javascripts %}{% endblock %}
<script>
    const amounts = document.getElementsByClassName('amount')
    let total = 0

    for (let x = 0; x < amounts.length; x++) {
        const amount = parseInt(amounts[x].innerText)

        total += amount
    }

    document.getElementsByClassName('fa-shopping-cart')[0].innerHTML = " " + total
</script>
<script src="https://kit.fontawesome.com/525e4431a2.js"></script>


</body>
</html>