      document.getElementById("navbar-container").style.backgroundColor = "rgba(0,0,0,1)";
      function resizeText() {
      var x = document.getElementsByClassName("nav-link");
      for (var i = 0; i < x.length; i++) {
          x[i].style.fontSize="16px";
          }
      };
